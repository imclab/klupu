import errno
import os.path
import sys

from bs4 import Comment
from bs4 import CData
import bs4

import klupu

def clean(soup):

    for tag in soup.find_all(text=lambda t: isinstance(t, Comment)):
        tag.extract()

    for tag in soup.find_all(text=lambda t: isinstance(t, bs4.Declaration)):
        tag.extract()

    for tag in soup("style"):
        tag.extract()

    for tag in soup("meta"):
        tag.extract()

    for tag in soup("span"):
        tag.replace_with_children()

    for tag in soup("font"):
        tag.replace_with_children()

    for tag in soup("st1:metricconverter"):
        tag.replace_with_children()

    for tag in soup("st1:personname"):
        tag.replace_with_children()

    for tag in soup.find_all():
        attrs = tag.attrs
        saved_attrs = set(["class", "href", "target"]) & set(attrs.keys())
        tag.attrs = {a: attrs[a] for a in saved_attrs}

    for tag in soup.find_all():
        if not tag.text.strip():
            tag.replace_with_children()

    return soup

def _main():
    dest_dirpath = sys.argv[1]
    for minutes_dirpath in sys.argv[2:]:
        minutes_dirpath = os.path.normpath(minutes_dirpath)

        minutes_dirname = os.path.basename(minutes_dirpath)
        dest_dirpath = os.path.join(dest_dirpath, minutes_dirname)
        try:
            os.mkdir(dest_dirpath)
        except OSError as err:
            if err.errno != errno.EEXIST:
                raise err

        index_filepath = os.path.join(minutes_dirpath, "index.htm")
        index_soup = klupu.read_soup(index_filepath, "iso-8859-15")
        clean_index_soup = clean(index_soup)
        with open(os.path.join(dest_dirpath, "index.htm"), "w") as f:
            f.write(clean_index_soup.prettify(formatter="html"))

        for issue_filepath in klupu.iter_issue_filepaths(minutes_dirpath):
            issue_soup = klupu.read_soup(issue_filepath, "windows-1252")
            clean_issue_soup = clean(issue_soup)
            issue_filename = os.path.basename(issue_filepath)
            with open(os.path.join(dest_dirpath, issue_filename), "w") as f:
                f.write(clean_issue_soup.prettify(formatter="html"))

        info_filepath = os.path.join(minutes_dirpath, klupu.INFO_FILENAME)
        info_soup = klupu.read_soup(info_filepath, "windows-1252")
        clean_info_soup = clean(info_soup)
        with open(os.path.join(dest_dirpath, klupu.INFO_FILENAME), "w") as f:
            f.write(clean_info_soup.prettify(formatter="html"))

if __name__ == "__main__":
    _main()
